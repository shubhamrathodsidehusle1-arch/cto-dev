generator client {
  provider             = "prisma-client-py"
  interface            = "asyncio"
  recursive_type_depth = 5
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String    @id @default(cuid())
  email             String    @unique
  passwordHash      String
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  
  jobs              Job[]
  projects          Project[]
  
  @@index([email])
  @@map("users")
}

model Project {
  id                String    @id @default(cuid())
  userId            String
  name              String
  description       String?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  
  user              User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  jobs              Job[]
  
  @@index([userId])
  @@map("projects")
}

model Job {
  id                String    @id @default(cuid())
  userId            String
  projectId         String?
  status            String    @default("queued") // queued, processing, completed, failed, cancelled
  prompt            String
  metadata          Json?
  result            Json?
  startedAt         DateTime?
  completedAt       DateTime?
  retryCount        Int       @default(0)
  maxRetries        Int       @default(3)
  celeryTaskId      String?
  usedProvider      String?
  usedModel         String?
  generationTimeMs  Int?
  errorMessage      String?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  
  user              User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  project           Project?  @relation(fields: [projectId], references: [id], onDelete: SetNull)
  metrics           Metric[]
  
  @@index([userId])
  @@index([projectId])
  @@index([status])
  @@index([createdAt])
  @@index([userId, status])
  @@map("jobs")
}

model ProviderHealth {
  id                   String   @id @default(cuid())
  provider             String   @unique
  status               String   @default("unknown") // healthy, degraded, unhealthy, unknown
  lastCheckedAt        DateTime @default(now())
  lastErrorMessage     String?
  consecutiveFailures  Int      @default(0)
  avgResponseTimeMs    Int?
  costPerRequest       Float?
  metadata             Json?
  updatedAt            DateTime @updatedAt
  
  @@map("provider_health")
}

model SystemMetadata {
  id        String   @id @default(cuid())
  key       String   @unique
  value     Json
  description String?
  updatedAt DateTime @updatedAt
  
  @@map("system_metadata")
}

model Metric {
  id        String   @id @default(cuid())
  jobId     String?
  timestamp DateTime @default(now())
  component String   // api, worker, database, provider
  metric    String   // queue_depth, processing_time, completion_rate, etc.
  value     Float
  tags      Json?
  
  job       Job?     @relation(fields: [jobId], references: [id], onDelete: Cascade)
  
  @@index([jobId])
  @@index([timestamp])
  @@index([component, metric])
  @@map("metrics")
}
