# Application
APP_NAME=ai-video-generation-backend
APP_ENV=development
APP_DEBUG=true
API_VERSION=v1
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Database
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/ai_video_generation
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=ai_video_generation

# Redis
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379

# Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_TASK_TIME_LIMIT=4000
CELERY_TASK_SOFT_TIME_LIMIT=3600
CELERY_MAX_RETRIES=3
CELERY_RETRY_BACKOFF=60

# Prometheus
PROMETHEUS_PORT=9090

# Security (generate secure values for production)
SECRET_KEY=development-secret-key-change-in-production
API_KEY=development-api-key-change-in-production
JWT_SECRET_KEY=development-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_HASH_ROUNDS=12

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Public URL for building video download links returned to the frontend
PUBLIC_BASE_URL=http://localhost:8000

# Providers
OPENROUTER_API_KEY=
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_DEFAULT_VIDEO_MODEL=
PROVIDER_TIMEOUT_SECONDS=300
PROVIDER_FALLBACK_ORDER=["openrouter","mock"]

# Video storage
VIDEO_STORAGE_PATH=./storage/videos
VIDEO_RETENTION_DAYS=7

# Retries
RETRY_MAX_ATTEMPTS=3

# Provider health
HEALTH_CHECK_INTERVAL_SECONDS=60

# API rate limits
USER_JOB_CREATE_RATE_LIMIT_PER_MINUTE=30

# Task Queue Configuration
DEFAULT_QUEUE_NAME=default
HIGH_PRIORITY_QUEUE_NAME=high_priority
LOW_PRIORITY_QUEUE_NAME=low_priority
